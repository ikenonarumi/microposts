<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= image_tag @user.avatar.url if @user.avatar? %>
    <section class="stats">
      <%= render 'users/stats' %>
      <%= link_to "favorites", favorites_user_path %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% @users.each do |user| %>
    <table>
      <tr>
        <td><%= gravatar_for @user %></td>
        <td><%= user.name %></td>
        <td><%= link_to '詳細', user_path(user) %></td>
        <br>
      </tr>
    </table>
    <% end %>
  </div>
</div>